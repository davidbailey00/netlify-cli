{
  "name": "netlify-cli-slim",
  "description": "Netlify command line tool",
  "version": "3.2.3",
  "author": "Netlify Inc.",
  "contributors": [
    "Mathias Biilmann <matt@netlify.com> (https://twitter.com/biilmann)",
    "David Calavera <david@netlify.com> (https://twitter.com/calavera)",
    "David Wells <david.wells@netlify.com> (https://davidwells.io/)",
    "Raees Iqbal <raees@netlify.com> (https://raeesbhatti.com/)",
    "Bret Comnes <bcomnes@gmail.com> (https://bret.io)"
  ],
  "engines": {
    "node": ">=10.18.0"
  },
  "files": [
    "/bin",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json",
    "/scripts/postinstall.js",
    "/dist/index.js"
  ],
  "homepage": "https://github.com/netlify/cli",
  "keywords": [
    "api",
    "cli",
    "netlify",
    "static"
  ],
  "license": "MIT",
  "repository": "netlify/cli",
  "main": "dist/index.js",
  "bin": {
    "ntl": "./bin/run",
    "netlify": "./bin/run"
  },
  "bugs": {
    "url": "https://github.com/netlify/cli/issues"
  },
  "scripts": {
    "prepublishOnly": "npm ci && run-s build",
    "build": "node ./scripts/build.js",
    "start": "node ./bin/run",
    "test": "run-s format test:dev",
    "format": "run-s format:check-fix:*",
    "format:ci": "run-s format:check:*",
    "format:check-fix:lint": "run-e format:check:lint format:fix:lint",
    "format:check:lint": "cross-env-shell eslint $(cat scripts-args/eslint.txt)",
    "format:fix:lint": "cross-env-shell eslint --fix $(cat scripts-args/eslint.txt)",
    "format:check-fix:prettier": "run-e format:check:prettier format:fix:prettier",
    "format:check:prettier": "cross-env-shell prettier --check $(cat scripts-args/prettier.txt)",
    "format:fix:prettier": "cross-env-shell prettier --write $(cat scripts-args/prettier.txt)",
    "test:dev": "run-s test:init:* test:dev:*",
    "test:ci": "run-s test:init:* test:ci:*",
    "test:init:cli-version": "npm run start -- --version",
    "test:init:cli-help": "npm run start -- --help",
    "test:init:install-deps": "npm ci --prefix tests/site-cra",
    "test:dev:ava": "ava --verbose",
    "test:ci:ava": "nyc -r json ava",
    "docs": "node ./site/scripts/docs.js",
    "watch": "nyc --reporter=lcov ava --watch",
    "prepack": "oclif-dev manifest && npm prune --prod",
    "postpack": "rm -f oclif.manifest.json && npm i",
    "site:build": "run-s site:build:*",
    "site:build:install": "cd site && npm ci",
    "site:build:assets": "cd site && npm run build",
    "postinstall": "node ./scripts/postinstall.js"
  },
  "dependencies": {
    "@oclif/command": "^1.8.0",
    "@oclif/config": "^1.17.0",
    "@oclif/errors": "^1.3.4",
    "@oclif/parser": "^3.8.5",
    "@oclif/plugin-help": "^2.2.3",
    "@oclif/plugin-not-found": "^1.2.4",
    "@oclif/plugin-plugins": "^1.9.5",
    "update-notifier": "^4.1.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@netlify/build": "^8.0.6",
    "@netlify/config": "^3.0.1",
    "@netlify/eslint-config-node": "^2.2.5",
    "@netlify/plugin-edge-handlers": "^1.11.1",
    "@netlify/traffic-mesh-agent": "^0.27.8",
    "@netlify/zip-it-and-ship-it": "^2.0.2",
    "@oclif/dev-cli": "^1.26.0",
    "@oclif/test": "^1.2.8",
    "@octokit/rest": "^16.43.2",
    "@sindresorhus/slugify": "^1.1.0",
    "@ungap/from-entries": "^0.2.1",
    "ansi-styles": "^5.0.0",
    "ascii-table": "^0.0.9",
    "ava": "^2.4.0",
    "body-parser": "^1.19.0",
    "boxen": "^4.2.0",
    "chalk": "^2.4.2",
    "chokidar": "^3.5.1",
    "ci-info": "^2.0.0",
    "clean-deep": "^3.4.0",
    "cli-spinners": "^2.5.0",
    "cli-ux": "^5.5.1",
    "concordance": "^4.0.0",
    "configstore": "^5.0.1",
    "content-type": "^1.0.4",
    "cookie": "^0.4.1",
    "copy-template-dir": "^1.4.0",
    "del": "^5.1.0",
    "dot-prop": "^5.3.0",
    "dotenv": "^8.2.0",
    "envinfo": "^7.7.3",
    "esbuild": "^0.8.33",
    "execa": "^5.0.0",
    "express": "^4.17.1",
    "express-logging": "^1.1.1",
    "filter-obj": "^2.0.1",
    "find-up": "^4.1.0",
    "form-data": "^3.0.0",
    "fuzzy": "^0.1.3",
    "get-port": "^5.1.1",
    "gh-release-fetch": "^1.1.0",
    "git-repo-info": "^2.1.1",
    "gitconfiglocal": "^2.1.0",
    "globby": "^10.0.2",
    "got": "^11.8.1",
    "http-proxy": "^1.18.1",
    "http-proxy-middleware": "^1.0.6",
    "https-proxy-agent": "^5.0.0",
    "inquirer": "^6.5.2",
    "inquirer-autocomplete-prompt": "^1.3.0",
    "is-docker": "^2.1.1",
    "isexe": "^2.0.0",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "^3.1.2",
    "lambda-local": "^1.7.4",
    "locate-path": "^6.0.0",
    "lodash": "^4.17.20",
    "log-symbols": "^3.0.0",
    "make-dir": "^3.1.0",
    "minimist": "^1.2.5",
    "multiparty": "^4.2.2",
    "netlify": "^6.0.12",
    "netlify-redirect-parser": "^3.0.1",
    "netlify-redirector": "^0.2.1",
    "node-fetch": "^2.6.1",
    "nyc": "^15.1.0",
    "omit.js": "^2.0.2",
    "open": "^7.3.1",
    "ora": "^4.1.1",
    "p-filter": "^2.1.0",
    "p-timeout": "^4.1.0",
    "p-wait-for": "^3.2.0",
    "parse-github-url": "^1.0.2",
    "parse-gitignore": "^1.0.1",
    "path-exists": "^4.0.0",
    "path-type": "^4.0.0",
    "pidtree": "^0.5.0",
    "prettyjson": "^1.2.1",
    "random-item": "^3.1.0",
    "raw-body": "^2.4.1",
    "safe-join": "^0.1.3",
    "seedrandom": "^3.0.5",
    "semver": "^7.3.4",
    "sinon": "^8.1.1",
    "standard-version": "^9.1.0",
    "static-server": "^2.2.1",
    "strip-ansi": "^6.0.0",
    "strip-ansi-control-characters": "^2.0.0",
    "temp-dir": "^2.0.0",
    "to-readable-stream": "^2.1.0",
    "tomlify-j0.4": "^3.0.0",
    "uuid": "^8.3.2",
    "wait-port": "^0.2.9",
    "which": "^2.0.2",
    "winston": "^3.3.3",
    "wrap-ansi": "^6.2.0",
    "write-file-atomic": "^3.0.3"
  },
  "ava": {
    "files": [
      "src/**/*.test.js",
      "tests/*.test.js"
    ],
    "cache": true,
    "concurrency": 5,
    "failFast": false,
    "failWithoutAssertions": false,
    "tap": false,
    "compileEnhancements": false,
    "babel": false
  },
  "oclif": {
    "bin": "netlify",
    "commands": "./src/commands",
    "plugins": [
      "@oclif/plugin-not-found",
      "@oclif/plugin-plugins",
      "@oclif/plugin-help"
    ],
    "hooks": {
      "init": [
        "./src/hooks/init"
      ],
      "analytics": [
        "./src/hooks/analytics"
      ]
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm run format"
    }
  },
  "standard-version": {
    "scripts": {
      "postbump": "auto-changelog -p --template keepachangelog && git add README.md CHANGELOG.md"
    }
  }
}
